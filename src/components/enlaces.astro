---
const { href, arial } = Astro.props;
---

<a class="enlaces" href={href} target="_blank" role="link" aria-label={arial} > <slot /> </a>

<style is:inline>
.enlaces {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    border-radius: 9999px;

    border: 1px solid var(--button-br);
    color: var(--text-600);
    text-decoration: none;
    transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out, color 0.3s ease-in-out;

    svg {
        width: 1.15rem;
        height: 1.15rem;
    }

    &:hover {
    color: var(--color-theme-primary);
    border: 1px solid var(--color-theme-primary);
    }
}

</style>
